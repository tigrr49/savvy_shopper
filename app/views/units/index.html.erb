<div class="page-header">
  <h1>
    Units
    <a href="/units/new" class="btn btn-lg btn-success">New Unit</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
        <td>
          <a href="/units/<%= unit.id %>" class="btn btn-primary">Show</a>
          <a href="/units/<%= unit.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_unit/<%= unit.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
