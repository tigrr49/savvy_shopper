<div class="page-header">
  <h1>
    Shopping list items
    <a href="/shopping_list_items/new" class="btn btn-lg btn-success">New Shopping list item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Item</th>
        <th>Brand</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>

      <% @shopping_list_items.each do |shopping_list_item| %>
      <tr>
        <td><%= shopping_list_item.user.first_name %></td>
        <td><%= shopping_list_item.item.name %></td>
        <td><%= shopping_list_item.item.brand %></td>
        <td><%= shopping_list_item.quantity %></td>
        <td>
          <a href="/shopping_list_items/<%= shopping_list_item.id %>" class="btn btn-primary">Show</a>
          <a href="/shopping_list_items/<%= shopping_list_item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_shopping_list_item/<%= shopping_list_item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
