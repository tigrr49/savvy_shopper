<!-- Validation failure messages -->
<% if @category.errors.any? %>
  <% @category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>
    Manage Categories
    <!-- <a href="/categories/new" class="btn btn-lg btn-success">New Category</a> -->
  </h1>
</div>

<br>

<div class="row">
  <div class="col-md-12">
    <form action="/create_category" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          New Category Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @category.name %>">
      </div>

      <button class="btn btn-success">
        Add New Category
      </button>
      <!-- or
      <a href="/categories">Cancel</a> -->
    </form>
  </div>
</div>


<br>
<br>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Current List of Categories</th>
        <th>Actions</th>
      </tr>

      <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <!-- <a href="/categories/<%= category.id %>" class="btn btn-primary">Show</a> -->
          <a href="/categories/<%= category.id %>/edit" class="btn btn-warning">Edit</a>
          <!-- <a href="/delete_category/<%= category.id %>" class="btn btn-danger" rel="nofollow">Delete</a> -->
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
