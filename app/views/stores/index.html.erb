<div class="page-header">
  <h1>
    Stores
    <a href="/stores/new" class="btn btn-lg btn-success">New Store</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td>
          <a href="/stores/<%= store.id %>" class="btn btn-primary">Show</a>
          <a href="/stores/<%= store.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_store/<%= store.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
